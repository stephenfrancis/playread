{
  "name": "playread",
  "version": "0.0.1",
  "description": "Reader program for dramatic works",
  "engines": {
    "yarn": "^1.22"
  },
  "scripts": {
    "build": "yarn run build:client && yarn run build:convert",
    "build:client": "NODE_ENV=production ./node_modules/.bin/ts-node src/config/fuse.ts",
    "build:convert": "node src/convert/exec.js",
    "build:server": "npx tsc",
    "clean": "rm -f -r .cache/* dist/*",
    "deploy": "firebase deploy",
    "start": "NODE_ENV=development ./node_modules/.bin/ts-node src/config/fuse.ts",
    "svg2react": "yarn run @svgr/cli src/assets/raw --out-dir src/assets/react --typescript"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:stephenfrancis/playread"
  },
  "author": "stephen.d.francis@gmail.com",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "koa": "^2.13.4",
    "koa-static": "^5.0",
    "loglevel": "^1.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@svgr/core": "^6.2.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router": "^5.1.18",
    "@types/react-router-dom": "^5.3.3",
    "fuse-box": "^4.0.0",
    "jest": "^27.4.7",
    "nyc": "^15.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
